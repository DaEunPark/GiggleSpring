<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.giggler.giggle.followList">

<!-- 팔로우한 리스트 불러오기 -->
	<select id="followingList" parameterType="com.giggler.giggle.dto.FollowListDTO" resultType="com.giggler.giggle.dto.FollowListDTO">
		<![CDATA[
			select f.*, u.user_nick, u.status_message
			from follow f
				inner join user u
			    on f.user_no = u.user_no
			where f.user_no = #{user_no}
		]]>
	</select>
</mapper>
	